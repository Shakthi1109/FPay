<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SecuGen.Demo.HomeActivity">

    <Button
        android:id="@+id/nextbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/regBtn"
        android:layout_alignBottom="@+id/regBtn"
        android:layout_centerHorizontal="true"
        android:layout_x="141dp"
        android:layout_y="452dp"
        android:text="VALIDATE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/regBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="26dp"
        android:layout_marginEnd="19dp"
        android:layout_x="268dp"
        android:layout_y="119dp"
        android:text="Register"
        tools:layout_editor_absoluteX="246dp"
        tools:layout_editor_absoluteY="431dp" />

    <EditText
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_x="73dp"
        android:layout_y="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Bill Amount"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textViewAmount"
        android:layout_alignBottom="@+id/textViewAmount"
        android:layout_toStartOf="@+id/emailInput"
        android:layout_x="179dp"
        android:layout_y="344dp" />

    <TextView
        android:id="@+id/textViewAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/regBtn"
        android:layout_marginBottom="75dp"
        android:layout_toEndOf="@+id/emailInput"
        android:layout_x="1dp"
        android:layout_y="369dp"
        android:gravity="center" />

    <ImageView
        android:id="@+id/imageViewPayment"
        android:layout_width="173dp"
        android:layout_height="132dp"
        android:layout_alignBottom="@+id/textViewName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:layout_x="103dp"
        android:layout_y="177dp"
        android:contentDescription="@string/fingerprint_capture_image"
        android:src="@android:drawable/picture_frame" />

    <!--<TextView-->
        <!--android:id="@+id/textViewTemplate"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_below="@+id/textViewAmount"-->
        <!--android:layout_marginTop="12dp"-->
        <!--android:text="template" />-->

    <Button
        android:id="@+id/buttonRetrive"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nextbtn"
        android:layout_alignBottom="@+id/nextbtn"
        android:layout_toStartOf="@+id/imageViewPayment"
        android:layout_x="26dp"
        android:layout_y="452dp"
        android:text="SUBMIT" />

    <Button
        android:id="@+id/scanFpBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageViewPayment"
        android:layout_marginBottom="20dp"
        android:layout_toStartOf="@+id/nextbtn"
        android:layout_x="32dp"
        android:layout_y="121dp"
        android:text="Scan FP" />

    <Button
        android:id="@+id/buttonLedOnPayment"
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/scanFpBtn"
        android:layout_alignTop="@+id/scanFpBtn"
        android:layout_toEndOf="@+id/nextbtn"
        android:layout_x="152dp"
        android:layout_y="124dp"
        android:text="LED"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cost"
        android:layout_below="@+id/cost"
        android:layout_marginTop="12dp"
        android:layout_x="75dp"
        android:layout_y="59dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="83dp" />

    <TextView
        android:id="@+id/hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="179dp"
        android:layout_y="318dp"
        tools:layout_editor_absoluteX="134dp"
        tools:layout_editor_absoluteY="306dp" />

    <Button
        android:id="@+id/paybtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="267dp"
        android:layout_y="452dp"
        android:text="PAY"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="443dp" />

</AbsoluteLayout>
